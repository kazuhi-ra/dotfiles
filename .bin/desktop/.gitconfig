[init]
defaultBranch = main
[ghq]
root = ~/workspace

[core]
editor = nvim
pager = delta

[interactive]
diffFilter = delta --color-only

[delta]
side-by-side = true
commit-decoration-style = bold box ul "#34fd50"
dark = true
file-decoration-style = none
file-style = omit
hunk-header-decoration-style = "#00b494" box ul
hunk-header-file-style = "#999999"
hunk-header-line-number-style = bold "#03a4ff"
hunk-header-style = file line-number syntax
line-numbers = true
line-numbers-left-style = black
line-numbers-right-style = black
line-numbers-zero-style = "#999999"

minus-emph-style = normal "#ad16c1"
minus-style = syntax "#610e6c"
line-numbers-minus-style = "#B10036"

plus-emph-style = normal "#115aa3"
plus-style = syntax "#194048"
line-numbers-plus-style = "#00A0A0"

